import numpy as np
import matplotlib.pyplot as plt
import scipy.integrate as integrate
import math
import seaborn

## save to
savetofolder = "/home/ali/Documents/prwork/mathematics/"
savetofile   = "gaussian_quadratic1.png"



z = 2

# This is the Gamma function 
# but without the integral
# i.e. it is the core function
gamma = lambda x: (x**(z-1))*(math.e**(-x))


x = np.arange(-10,10, 0.1)
y = np.vectorize(gamma)(x)
#plt.fill(x,y)
#plt.axis(option=True)

fig, ax = plt.subplots()

seaborn.set_style("dark")
seaborn.set()
#seaborn.fill(x,y)


seaborn.lineplot(x,y, ax=ax)
#ax.grid(True)

#seaborn.despine(x,y)



ax.fill_between(x,y)
plt.show()
